  "version": "2.0.0",
  "tasks": [
    {
      "label": "wails client",
      "type": "shell",
      "command": "npm run build:wails",
      "options": {
        "cwd": "${workspaceFolder}/client"
      }
    },
    {
      "label": "wails",
      "type": "shell",
      "command": "wails build -s",
      "options": {
        "cwd": "${workspaceFolder}/wails"
      }
    }
  ]
}